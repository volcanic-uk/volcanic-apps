- url = Rails.env.development? ? 'http://localhost:3001/bond_adapt/save_settings' : "https://#{ENV['DOMAIN_NAME']}/bond_adapt/save_settings"
= simple_form_for @bond_adapt_setting, url: url, method: :post, remote: true do |f|
  = f.input :dataset_id, as: :hidden
  .panel
    .panel-heading
      Authentication Settings
    .panel-body
      .row
        .col-md-6
          = f.input :username, input_html: { class: 'form-control' }
        .col-md-6
          = f.input :password, input_html: { class: 'form-control', value: @bond_adapt_setting.password }
      .row
        .col-md-6
          = f.input :domain, input_html: { class: 'form-control' }
        .col-md-6
          = f.input :domain_profile, input_html: { class: 'form-control', value: @bond_adapt_setting.password }
      .row
        .col-md-12
          = f.input :endpoint, input_html: { class: 'form-control' }
      .row
        .col-md-12
          = f.submit 'Save', class: 'btn btn-default'