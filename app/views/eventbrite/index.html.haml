  /       .item
  /         .row.push-bottom--double
  /           .col-sm-8.col-sm-offset-2
  /             %p Once logged in, click on the <b>"Create a new app"</b> link shown below.
  /         %br
  /         .push-bottom--double
  /           = image_tag(image_url('eventbrite/step-2-eventbrite-auth.png'), class: 'img-responsive push-bottom--double')
