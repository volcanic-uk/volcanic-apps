= simple_form_for :data, url: @host,  remote: true do  |f|
  .row
    .col-md-6
      #flash_messages

  .row
    .col-md-6
      = f.input :access_token, input_html: { value:  (@settings.present? ? @settings.access_token : '') }

  .row
    .col-md-6
      = f.hidden_field :dataset_id, value: @dataset_id
  %br
  = f.button  :submit, (@settings.present? ? "Update" : "Save"), class: "btn btn-info"
