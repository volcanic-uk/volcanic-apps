- url = Rails.env.development? ? 'http://localhost:3001/reed_global/destroy_mapping' : 'https://apps.volcanic.co/reed_global/destroy_mapping'
- if mappings.present?
  .well
    %h6
      %b= discipline_name
    - mappings.each do |mapping|
      .row
        .col-xs-8
          = mapping.job_function_name_from_api_response(@job_functions)
        .col-xs-4
          = link_to 'Delete', "#{url}?reed_country_id=#{mapping.reed_country_id}&id=#{mapping.id}", class: 'delete-mapping', data: { confirm: "Are you sure you want to delete this mapping?" }, method: :post, remote: true