.volcanic_apps
  .row
    .col-lg-3.col-md-12
    .col-lg-6.col-md-12
      %h3 This Reed App maps job functions to disciplines by country for Reed Global's sites
      %hr

      #flash_messages

      .row
        .col-md-12
          %ul.nav.nav-tabs.nav-tabs-highlight{ style: 'border-bottom: 1px solid #d9d9d9 !important;' }
            %li.active
              %a{ :href => '#tab1', 'data-toggle' => 'tab'} Mappings
            %li
              %a{ :href => '#tab2', 'data-toggle' => 'tab'} Countries
          .tab-content
            .tab-pane.active#tab1
              #mappings
                = render partial: 'mappings', locals: { reed_countries: @reed_countries }
            .tab-pane#tab2
              #country_form
                = render partial: 'country_form', locals: { reed_country: @reed_country }

              .panel
                .panel-heading
                  %h6 Current countries
                .panel-body
                  #countries
                    = render partial: 'countries', locals: { reed_countries: @reed_countries }
