.row
  .col-xs-12
    %h2 Form
  .col-xs-12
    .row
      - url = Rails.env.development? ? 'http://localhost:3001/mail_chimp/save_condition' : 'https://apps.volcanic.co/mail_chimp/save_condition'
      = simple_form_for @mail_chimp_condition, url: url, method: :post do |f|
        = hidden_field_tag :app_id, "#{params[:data][:id]}"
        = hidden_field_tag :key_id, "#{@key.id}"
        .col-xs-12
          = f.input :mail_chimp_app_settings_id, input_html: { value: "#{@mail_chimp_app_settings.id}" }, readonly: true, as: :hidden
        .col-xs-12
          = f.input :user_group, collection: @user_group_collection, label: "User Group", include_blank: false
        .col-xs-12
          = f.input :mail_chimp_list_id, collection: @mailchimp_lists_collection, label: "MailChimp mailing list", include_blank: false
        .col-xs-12
          = f.input :registration_question_id, collection: 1..10, label: "Registration question", include_blank: false
        .col-xs-12
          = f.input :answer, label: "Answer to match"
        .col-xs-12
          = f.submit class: 'btn btn-primary'
