.form-group
  .required
    %label.required
      %abbr{title: "Required"} *
      Fee Percentage
    %input.form-control#split-fee-percentage{type: "number", name: "user[extra][split_fee][fee_percentage]", required: true}
.form-group
  %label 
    Approximate Total Fee:
    %span#split-fee-approx-total
.form-group
  .required
    %label.required
      %abbr{title: "Required"} *
      Split Fee Terms
    %textarea.form-control{name: "user[extra][split_fee][terms_of_fee]", required: true, rows: 6}= (@job.present? && @job["extra"].present? && @job["extra"]["split_fee"].present? ? @job["extra"]["split_fee"]["terms_of_fee"] : "")

:javascript
  $(document).ready(function(){
    calculateFee();
    $("#job_salary_high, #split-fee-percentage").change(function(){
      calculateFee();
    });

    function calculateFee(){
      band = $("#job_salary_high").val();
      percent = $("#split-fee-percentage").val();

      if( band && percent){
        var fee = (band / 100) * percent;
        $("span#split-fee-approx-total").text("Â£" + fee);
      }
    };

  });
  