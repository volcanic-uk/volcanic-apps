%h4 Split Fee
.form-group= @split_fee_setting.details.html_safe

.form-group
  .required
    %label.required
      %abbr{title: "Required"} *
      Fee Percentage
    %input.form-control#split-fee-percentage{type: "number", name: "user[extra][split_fee][fee_percentage]", required: true}

.form-group
  .required
    %label.required
      %abbr{title: "Required"} *
      Split Fee Terms
    %textarea.form-control{name: "user[extra][split_fee][terms_of_fee]", required: true, rows: 6}= (@job.present? && @job["extra"].present? && @job["extra"]["split_fee"].present? ? @job["extra"]["split_fee"]["terms_of_fee"] : "")